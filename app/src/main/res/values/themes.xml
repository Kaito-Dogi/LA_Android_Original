        <item name="colorPrimary">@color/pri_200</item>
        <item name="colorPrimaryVariant">@color/pri_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pri_200</item>
        <item name="colorSecondaryVariant">@color/pri_500</item>
        <item name="colorOnSecondary">@color/white_background</item>
